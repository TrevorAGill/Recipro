<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.recipro.SearchCriteriaFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/includeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/excludeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="@+id/includeEditText" />
    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="@+id/excludeEditText" />

    <TextView
        android:id="@+id/includeIngredientsTextView"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:text="Include Ingredients"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.571" />

    <TextView
        android:id="@+id/excludeIngredientsTextView"
        android:layout_width="142dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical"
        android:text="Exclude Ingredients"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/includeIngredientsTextView"
        android:layout_marginTop="43dp"
        app:layout_constraintHorizontal_bias="0.666" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_gravity="bottom"
        android:paddingLeft=""
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:text="Time Required"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="@+id/excludeIngredientsTextView"
        app:layout_constraintHorizontal_bias="0.571" />

    <TextView
        android:id="@+id/courseTextView"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:text="Meal Course"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/excludeIngredientsTextView"
        app:layout_constraintHorizontal_bias="0.571" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="215dp"
        android:layout_height="43dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="@+id/timeEditText" />

    <Spinner
        android:id="@+id/cuisineSpinner"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/courseSpinner" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Select Search Criteria"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="32dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/submitCriteriaButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="365dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cuisineTextView"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Cuisine"
        android:textSize="16dp"
        tools:layout_editor_absoluteY="266dp" />

</android.support.constraint.ConstraintLayout>